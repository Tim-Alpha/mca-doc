<%- include('header'); -%>
    <h1 id="headingMain"><%= bookTitle[0] %></h1>
    <% posts.forEach(function(post){ %>
        <h3 style="margin-left: 110px;"><%= post.title %></h3>
        <div style="margin-left: 100px;margin-right: 300px;margin-bottom: 30px;border: 1px;text-align: left;">
            <p><%= post.content.slice(0,60) + " ..." %> <a href="/posts/<%= post.title  %>">Read more.</a></p>
        </div>
    <% });%>
<%- include('footer'); -%>